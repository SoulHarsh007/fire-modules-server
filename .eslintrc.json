{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react-hooks/recommended",
    "google",
    "plugin:prettier/recommended",
    "plugin:jsdoc/recommended",
    "plugin:security/recommended",
    "next/core-web-vitals"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "settings": {
    "jsdoc": {
      "mode": "typescript"
    }
  },
  "plugins": ["security"],
  "rules": {
    "prettier/prettier": "warn",
    "valid-jsdoc": "off"
  }
}
